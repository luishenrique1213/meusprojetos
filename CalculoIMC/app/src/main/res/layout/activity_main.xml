<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89000B"
    android:backgroundTint="#BF1947"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="142dp"
        android:layout_height="39dp"
        android:background="#69B519"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="20sp"
        android:text="Calculo e IMC"
        android:textAlignment="textStart"
        android:textColor="#11228A"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="323dp"
        android:layout_height="219dp"
        app:srcCompat="@drawable/CALCULO"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="89dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="174dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="435dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#43A047"
        android:backgroundTint="#43A047"
        android:fontFamily="sans-serif"
        android:text="Peso(kg)"
        android:textColor="#0C518E"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="385dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#43A047"
        android:text="Altura(m)"
        android:textColor="#3949AB"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="385dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal2"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="503dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="196dp"
        android:layout_height="39dp"
        android:text="Mensagem"
        android:textColor="#1A4C78"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="639dp" />

</androidx.constraintlayout.widget.ConstraintLayout>